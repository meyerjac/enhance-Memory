<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_s1_l1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="jacksonmeyer.com.memoryenhancement.Stage2.S2L16">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lightBulbRelativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfLightbulbs"
            android:textSize="15sp"
            android:layout_marginRight="3dp"
            android:layout_alignTop="@+id/lightbulbImage"
            android:layout_toLeftOf="@+id/lightbulbImage"
            android:layout_toStartOf="@+id/lightbulbImage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lightbulb1"
            android:background="@android:color/transparent"
            android:id="@+id/lightbulbImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonLayout">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/answer1"
            android:src="@drawable/apple"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/apple"
            android:id="@+id/answer2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/apple"
            android:id="@+id/answer3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_background"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:id="@+id/replay"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_background"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:id="@+id/next"
            android:gravity="center"
            android:layout_below="@+id/replay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

    </RelativeLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coundownTimerTextView"
        android:textSize="40dp"
        android:textColor="@color/colorYellowish"
        android:layout_below="@+id/lightBulbRelativeLayout"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backArrow" />

    <TextView
        android:text="@string/s1l16_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorYellowish"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/answerQuestionTextView"
        android:layout_above="@+id/buttonLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_correct"
        android:id="@+id/checkXImageView"
        android:visibility="invisible"
        android:layout_above="@+id/weatherLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sunny"
            android:id="@+id/weatherImageView2"
            />

    <TableLayout
        android:id="@+id/dayOfTheWeekLayout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:stretchColumns="*"
        android:layout_above="@+id/answerQuestionTextView"
        android:layout_toRightOf="@+id/weatherImageView2"
        android:layout_toEndOf="@+id/weatherImageView2"
        android:layout_marginBottom="39dp">

    <TableRow
        android:id="@+id/button_row"
        android:layout_width="0dip"
        android:layout_height="25dp"
        android:layout_weight="1"
        >


        <TextView
            android:text="Mon."
            android:textColor="@color/colorYellowish"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <TextView
            android:text="Tues."
            android:textColor="@color/colorYellowish"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <TextView
            android:text="Wed."
            android:textColor="@color/colorYellowish"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView
            android:text="Thurs."
            android:textColor="@color/colorYellowish"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        </TableRow>

        <TableRow
            android:id="@+id/weather_row"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:text="Fri."
                android:textColor="@color/colorYellowish"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:text="Sat."
                android:textColor="@color/colorYellowish"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <TextView
                android:text="Sun."
                android:textColor="@color/colorYellowish"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />
        </TableRow>

        <TableRow
            android:id="@+id/weather_row"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:text="Fri."
                android:textColor="@color/colorYellowish"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:text="Sat."
                android:textColor="@color/colorYellowish"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />

            <TextView
                android:text="Sun."
                android:textColor="@color/colorYellowish"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />
        </TableRow>
    </TableLayout>
</RelativeLayout>


